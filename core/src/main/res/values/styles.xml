<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleText" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/sf_pro_display_bold</item>
    </style>

    <style name="PriceText" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="fontFamily">@font/sf_pro_display_bold</item>
    </style>
    
    <style name="BlueButtonWithText" parent="BodyBlackText">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="BodyBlackText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="BodyGreyText" parent="BodyBlackText">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="singleLine">false</item>
    </style>

    <style name="SupportGreyText" parent="BodyGreyText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BaseText" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HotelRatingText" parent="BaseText">
        <item name="android:textColor">@color/hotel_rating_info_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="HotelAddressText" parent="BaseText">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="boxBackgroundColor">@color/background</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>